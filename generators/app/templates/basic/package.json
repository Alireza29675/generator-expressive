{
  "name": "<%= packageName %>",
  "description": "<%= description %>",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "start:watch": "nodemon ./bin/www",
    "bundle": "webpack",
    "bundle:watch": "webpack --watch"
  },
  "author": "<%= author %>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= github %>/<%= packageName %>.git"
  },
  "dependencies": {
    <% if (withMongoose) { %>"mongoose": "^4.12.1",<% } %>
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "morgan": "~1.9.0",
    "pug": "^2.0.1",
    "serve-favicon": "~2.4.5",
    "pretty-error": "^2.1.1"
  },
  "devDependencies": {
    <% if (withReact) { %>
    "babel-preset-react": "^6.24.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    <% } %>
    <% if (withSass) { %>
    "css-loader": "^0.28.11",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "node-sass": "^4.7.2",
    <% } %>
    <% if (withSocket) { %>
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    <% } %>
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "nodemon": "^1.17.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  },
  "bugs": {
    "url": "https://github.com/<%= github %>/<%= packageName %>/issues"
  },
  "homepage": "https://github.com/<%= github %>/<%= packageName %>#readme",
}
